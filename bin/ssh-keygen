#!/usr/bin/env bash

base_dir="$(cd "$(dirname "$0")/.." && pwd)"

function errout() {
  message="$1"
  echo "‚ùå $message"
  exit 1
}

[[ -z "$CIRCLE_BRANCH" ]] && errout "\$CIRCLE_BRANCH is not defined".
source "$base_dir"/data/"$CIRCLE_BRANCH"/env-build

identity="$base_dir"/data/"$CIRCLE_BRANCH"/ssh-identity

ssh-keygen -f "$identity"
